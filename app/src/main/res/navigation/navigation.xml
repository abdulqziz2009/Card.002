<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.myself223.card.Fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.myself223.card.Fragments.Category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/firestoreFragment"
        android:name="com.myself223.card.Fragments.fireStore.FireStoreFragment"
        android:label="fragment_firestore"
        tools:layout="@layout/fragment_fire_store_" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.myself223.card.Fragments.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.myself223.card.Fragments.OnBoard.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board2" />
    <dialog
        android:id="@+id/addCategoryFragment"
        android:name="com.myself223.card.Fragments.AddCategory.AddCategoryFragment"
        android:label="fragment_add_category"
        tools:layout="@layout/fragment_add_category" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.myself223.card.Fragments.SignIn.RegisterFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_register" />
</navigation>